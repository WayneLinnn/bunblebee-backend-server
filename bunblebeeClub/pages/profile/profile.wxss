/* pages/profile/profile.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 个人信息区域 */
.profile-section {
  background-color: #ffffff;
  padding: 40rpx 30rpx;
  margin-bottom: 20rpx;
}

.login-prompt {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
}

.login-text {
  font-size: 32rpx;
  color: #333333;
  margin-bottom: 30rpx;
}

.login-btn {
  width: 60%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #ffd700;
  color: #333333;
  font-size: 30rpx;
  border-radius: 40rpx;
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar-placeholder {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  background-color: #e0e0e0;
  margin-right: 30rpx;
}

.user-details {
  flex: 1;
}

.nickname {
  font-size: 34rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 10rpx;
  display: block;
}

.phone {
  font-size: 28rpx;
  color: #666666;
}

.bind-phone {
  margin: 0;
  padding: 0;
  width: fit-content;
  font-size: 28rpx;
  color: #ffd700;
  background: none;
  border: none;
}

.bind-phone::after {
  border: none;
}

/* 功能列表 */
.function-list {
  background-color: #ffffff;
  margin-bottom: 20rpx;
}

.function-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.function-item:last-child {
  border-bottom: none;
}

.function-title {
  font-size: 30rpx;
  color: #333333;
}

.function-arrow {
  font-size: 30rpx;
  color: #999999;
}

/* 退出登录 */
.logout-section {
  padding: 40rpx 30rpx;
}

.logout-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #ffffff;
  color: #ff4d4f;
  font-size: 30rpx;
  border-radius: 44rpx;
}
