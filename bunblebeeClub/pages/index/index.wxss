/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.container {
  padding: 20rpx;
  background-color: #f5f5f5;
}

/* 轮播图样式 */
.banner {
  width: 100%;
  height: 350rpx;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 30rpx;
}

.banner-item {
  width: 100%;
  height: 100%;
  background-color: #e0e0e0;
}

/* 导航区样式 */
.nav-section {
  display: flex;
  justify-content: space-between;
  padding: 30rpx 0;
  background-color: #ffffff;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
}

.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.nav-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #ffd700;
  margin-bottom: 10rpx;
}

/* 课程区域样式 */
.section {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
}

.section-more {
  font-size: 24rpx;
  color: #666666;
}

.course-scroll {
  width: 100%;
  white-space: nowrap;
}

.course-list {
  display: inline-flex;
  padding: 10rpx 0;
}

.course-card {
  width: 280rpx;
  margin-right: 20rpx;
  border-radius: 12rpx;
  overflow: hidden;
  background-color: #ffffff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.course-image {
  width: 100%;
  height: 180rpx;
  background-color: #e0e0e0;
}

.course-info {
  padding: 16rpx;
}

.course-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.course-price {
  font-size: 26rpx;
  color: #ffd700;
  margin-top: 8rpx;
  display: block;
}

/* 新闻列表样式 */
.news-list {
  display: flex;
  flex-direction: column;
}

.news-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.news-image {
  width: 200rpx;
  height: 140rpx;
  background-color: #e0e0e0;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.news-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.news-title {
  font-size: 28rpx;
  color: #333333;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.news-date {
  font-size: 24rpx;
  color: #999999;
}
